<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorSlide_1">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_undraw_connected_8wvi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/img"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_3_title"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/img"
        android:layout_marginTop="15dp"
        android:id="@+id/slide_title"
        android:fontFamily="@font/poppins"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_3_desc"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/slide_title"
        android:layout_marginTop="15dp"
        android:id="@+id/slide_desc"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/poppins"
        />

</RelativeLayout>